{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid height-100">
        <div class="row height-100">

            <div id="logo-panel" class="col-md-7 col-md-push-5">
                <img id="logo" src="http://assets.beautystack.co/logos/beautystack.png" style="max-width: 100%;">
            </div>

            <div id="form-panel" class="col-md-5 col-md-pull-7">
                <div class="left-panel-content">
                    <div class="row confirmation-text">
                        <div class="col-xs-12">
                            <h1>WOOOOP!</h1>
                            Thanks for verifying your address. Welcome to the crew!<br />Check your email for more info on Beautystack.
                        </div>
                    </div>

                    <div class="row">
                        <ul class="col-xs-12 icons confirm">
                            <li><a target="_blank" href="https://www.facebook.com/beautystack" class="icon"><i class="fa fa-facebook-square"></i></a></li>
                            <li><a target="_blank" href="https://twitter.com/beautystack" class="icon"><i class="fa fa-twitter"></i></a></li>
                            <li><a target="_blank" href="https://instagram.com/beautystackgang" class="icon"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

