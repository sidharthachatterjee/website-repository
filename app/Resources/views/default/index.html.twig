{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
  <div class="row">

    <div class="col-xs-6 left-panel height-100"></div>
    <div class="col-xs-6 right-panel height-100"></div>

    <div class="icon-wrapper">
      <ul class="col-xs-12 icons">
        <li><a target="_blank" href="https://www.facebook.com/beautystack" class="icon"><i class="fa fa-facebook-square"></i></a></li>
        <li><a target="_blank" href="https://twitter.com/beautystack" class="icon"><i class="fa fa-twitter"></i></a></li>
        <li><a target="_blank" href="https://instagram.com/beautystackgang" class="icon"><i class="fa fa-instagram"></i></a></li>
      </ul>
    </div>

    <div id="logo-wrapper">
      <img id="logo" src="http://assets.beautystack.co/logos/beautystack.png">
    </div>

    <div id="content-wrapper">
      <p class='content'>
        Is an invitation-only platform to help specialist beauty professionals
        publish their content and manage their bookings. <br>
        Apply now to join.
      </p>
    </div>

    <div id="buttons-wrapper">
      <a href="http://staging.beautystack.co/register">
        <div class="choice" id="pro">
          I am a Beauty Pro
        </div>
      </a>

      <a href="http://staging.beautystack.co/register">
        <div class="choice selected" id="client">
          I am a Client
        </div>
      </a>
    </div>

    <div id="footer-wrapper">
      <a href="https://www.beautystack.co/privacy">
        <p class="footer-text">Privacy</p>
      </a>
      <p class="footer-text separator">.</p>
      <a href="https://www.beautystack.co/termsofservice">
        <p class="footer-text">Terms</p>
      </a>
      <p class="footer-text separator">.</p>
      <a href="mailto:info@beautystack.co">
        <p class="footer-text">Contact</p>
      </a>
    </div>

  </div>
</div>

{% endblock %}

{% block javascripts %}
<!-- Scripts -->
<!--[if lte IE 8]>
  <script src="/assets/js/ie/respond.min.js"></script><![endif]-->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <!-- <script src="/assets/js/main.js"></script> -->

  <script>
  $(document).ready(function(){
    function setChoice(choice_index){
      var alt_index = (choice_index == 0 ? 1 : 0)

      var choice = $('.choice').eq(choice_index)
      var alt = $('.choice').eq(alt_index)

      if(!choice.hasClass('selected')){
        choice.addClass('selected');
        alt.removeClass('selected');
      }
    }

    $('#pro').hover(function(){
      setChoice(0);
    });

    $('#client').hover(function(){
      setChoice(1);
    });
  });

