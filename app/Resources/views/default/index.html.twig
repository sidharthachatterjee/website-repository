{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid height-100">
        <div class="row height-100">

            <div id="logo-panel" class="col-md-7 col-md-push-5">
                <img id="logo" src="http://assets.beautystack.co/logos/beautystack.png" style="max-width: 100%;">
            </div>

            <div id="form-panel" class="col-md-5 col-md-pull-7">
                <div class="left-panel-content">
                    <div class="row">
                        <div class="col-xs-12">
                            Beautystack is a new platform for beauty pros.
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <div id="line-break"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            Get early access?
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 type-option">
                            <span id="pro" class="circle"><div class="selected"></div></span>
                            <span class='user-type-text'>I am a Beauty Pro</span>
                        </div>
                        <div class="col-sm-6 type-option">
                            <span id="client" class="circle grey-circle"></span>
                            <span class='user-type-text'>I am a Client</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <form id="signup-form" method="post" action="#">
                                <input name="lead-type" type="hidden" value="PRO">
                                <input type="email" name="email" id="email" placeholder="Email Address" class="input-field"/>
                                <input type="submit" id="leadSubmit" value="GO" class="input-field"/>
                            </form>
                            <div id="message"></div>
                        </div>
                    </div>

                    <div class="row social-icons">
                        <ul class="col-xs-12 icons">
                            <li><a target="_blank" href="https://www.facebook.com/beautystack" class="icon"><i class="fa fa-facebook-square"></i></a></li>
                            <li><a target="_blank" href="https://twitter.com/beautystack" class="icon"><i class="fa fa-twitter"></i></a></li>
                            <li><a target="_blank" href="https://instagram.com/beautystackgang" class="icon"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>

                    <div class="row">
                        <div class="legal-links col-xs-12">
                            <a href="/termsofservice">Terms & Conditions</a> | <a href="/privacy">Privacy Policy</a>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <!-- Scripts -->
    <!--[if lte IE 8]>
    <script src="/assets/js/ie/respond.min.js"></script><![endif]-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/assets/js/main.js"></script>

    <script>
        $(document).ready(function () {
            function choiceSelect (choice) {
                var alternate = (choice == 0 ? 1 : 0);
                $('.circle').eq(alternate).html("");
                $('.circle').eq(choice).html("<div class='selected'></div>");
                $('.user-type-text').eq(alternate).addClass("grey-text");
                $('.user-type-text').eq(choice).removeClass("grey-text");
                $('.circle').eq(choice).removeClass("grey-circle");
                $('.circle').eq(alternate).addClass("grey-circle");
                $('input[name="lead-type"]')[0].value = (choice == 0 ? 'PRO' : 'CLIENT');
            }

            $('.circle').eq(0).click(function () {
                choiceSelect(0);
            });
            $('.circle').eq(1).click(function () {
                choiceSelect(1);
            });
            $('.user-type-text').eq(0).click(function () {
                choiceSelect(0);
            })
            $('.user-type-text').eq(1).click(function () {
                choiceSelect(1);
            })

            $('.left-panel-content').addClass('loaded');
            $('#logo').addClass('loaded');
        });

        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r;
            i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date();
            a = s.createElement(o),
                m = s.getElementsByTagName(o)[0];
            a.async = 1;
            a.src   = g;
            m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-98387976-1', 'auto');
        ga('send', 'pageview');
    </script>
{% endblock %}
