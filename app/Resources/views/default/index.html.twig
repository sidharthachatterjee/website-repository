  $(document).ready(function(){
    function setChoice(choice_index){
      var alt_index = (choice_index == 0 ? 1 : 0)

      var choice = $('.choice').eq(choice_index)
      var alt = $('.choice').eq(alt_index)

      if(!choice.hasClass('selected')){
        choice.addClass('selected');
        alt.removeClass('selected');
      }
    }

    $('#pro').hover(function(){
      setChoice(0);
    });

    $('#client').hover(function(){
      setChoice(1);
    });
