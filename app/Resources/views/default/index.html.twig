{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row page">
            <div class="col-md-10">

                <!-- Header -->
                <header id="header">
                    <!-- <h1 id="title">beautystack</h1> -->
                    <img src="../../images/beautystack.png" style="max-width: 100%;">

                    <p id="content">Beautystack is a new platform for beauty pros. <br />
                        We believe that booking should be customisable, image based and social.</p>
                </header>

                <!-- Signup Form -->
                <form id="signup-form" method="post" action="#">
                    <input type="email" name="email" id="email" placeholder="Email Address" />
                    <input type="submit" id="leadSubmit" value="Apply for an early invite" />
                </form>

                <div id="message">
                </div>

                <!-- Footer -->
                <footer id="footer">
                    <ul class="icons">
                        <li><a href="https://twitter.com/beautystack" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
                        <li><a href="http://instagram.com/beautystackgang" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
                        <li><a href="mailto:info@beautystack.co" class="icon fa-envelope-o"><span class="label">Email</span></a></li>
                    </ul>
                </footer>
            </div>

        </div>
    </div>
{% endblock %}

